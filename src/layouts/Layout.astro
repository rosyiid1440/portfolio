---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<!-- Bootstrap CSS -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>

		<title>{title} | Portfolio Abdurrosyiid Amrullah</title>
		<style>
			/* * {
				background-color: #15202b;
			} */
			html {
				background-color: #15202b;
			}
		</style>
	</head>
	<body style="background-color: #15202b;">
		<div class="row">
			<div class="col-md-8 mx-auto">
				<nav
					class="navbar navbar-expand-lg navbar-dark"
					style="color:#DEE0E1;"
				>
					<div class="container-fluid">
						<a class="navbar-brand" href="#"
							><b style="font-size: 24px;color:#68B2C8;"
								>_RoSyiid</b
							></a
						>
						<button
							class="navbar-toggler"
							type="button"
							data-bs-toggle="collapse"
							data-bs-target="#navbarScroll"
							aria-controls="navbarScroll"
							aria-expanded="false"
							aria-label="Toggle navigation"
						>
							<span class="navbar-toggler-icon"></span>
						</button>
						<div class="collapse navbar-collapse" id="navbarScroll">
							<ul
								class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll"
								style="--bs-scroll-height: 100px;"
							>
							</ul>
							<div class="d-flex" style="list-style: none;">
								<li class="nav-item">
									<a
										href="/"
										class="nav-link"
										style="color:#DEE0E1;text-decoration: none;"
										><b>Resume</b></a
									>
								</li>
								<li class="nav-item">
									<a
										href="/project"
										class="nav-link"
										style="color:#DEE0E1;text-decoration: none;"
										><b>Project</b></a
									>
								</li>
								<li class="nav-item">
									<a
										href="/about"
										class="nav-link"
										style="color:#DEE0E1;text-decoration: none;"
										><b>About</b></a
									>
								</li>
							</div>
						</div>
					</div>
				</nav>
				<hr style="color:white;" />
				<div class="row mt-5 mb-5">
					<div class="col-md-4">
						<div class="card" style="background-color:#12151D">
							<div class="card-body">
								<div class="row text-center">
									<div class="col-md">
										<img
											class="img-thumbnail"
											src="https://media.licdn.com/dms/image/D5635AQH8jmUbhsAj9g/profile-framedphoto-shrink_200_200/0/1685434504522?e=1716469200&v=beta&t=GB2wTfLnVvow55wBIc44eoMcbeKy-vcS2AmGHf6Rb_I"
											alt=""
											style="border-radius:50%;"
										/>
										<h3
											class="mt-3 text-left"
											style="color:white;"
										>
											<b>Abdurrosyiid Amrullah</b>
										</h3>
									</div>
								</div>
								<hr />
								<div class="mt-3 mb-3">
									<h5 class="" style="color:#4299E1;">
										<b class="">Skill</b>
										<hr />
									</h5>
									<ul style="color:white;">
										<li>HTML</li>
										<li>CSS</li>
										<li>JavaScript</li>
										<li>MySql</li>
										<li>Laravel</li>
										<li>CodeIgniter</li>
										<li>React Js</li>
										<li>React Native</li>
										<li>Flutter</li>
									</ul>
								</div>
								<hr />
								<div class="mt-3 mb-3">
									<h5 class="" style="color:#4299E1;">
										<b class="">Social Network</b>
										<hr />
									</h5>
									<ul style="color:white;">
										<li>
											<a
												href="https://github.com/rosyiid1440"
												>Github</a
											>
										</li>
										<li>
											<a
												href="https://www.linkedin.com/in/abdurrosyiid-amrullah-22980a235/"
												>Linkedin</a
											>
										</li>
										<li>
											<a
												href="https://instagram.com/rosyiid"
												>Instagram</a
											>
										</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
					<div class="col-md-8">
						<slot />
					</div>
				</div>
			</div>
		</div>

		<!-- Optional JavaScript; choose one of the two! -->

		<!-- Option 1: Bootstrap Bundle with Popper -->
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"></script>

